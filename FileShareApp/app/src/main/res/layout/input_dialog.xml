<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FileShare Base URL"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/title"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qr_code_black"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:id="@+id/qrButton" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true"
            android:id="@+id/textInputView">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2E2E2"
                android:hint="http://192.168.0.1:4576"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:textSize="16sp"
                android:id="@+id/textInput"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textInputView"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_github_black"
                android:layout_centerVertical="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Install FileShare CLI from Github"
                android:inputType="text"
                android:layout_marginLeft="27dp"
                android:textSize="12sp"
                android:background="@null"
                android:id="@+id/installButton" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>